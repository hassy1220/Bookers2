<div class="container">
 <div class="row">
  <div class="col-3 mr-5">
   <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <% @book.errors.full_messages.each do |massage| %>
    <li><%= massage %></li>
    <% end %>
   <% end %>
   <h1>User info</h1>
   <p class="border-bottom"><%= image_tag @user.get_profile_image(100,100) %></p>
   <p class="border-bottom">name <%= @user.name %></p>
   <p>introduction <%= @user.introduction %></p>
   <p><%= link_to"プロフィール編集",edit_user_path(@user.id) %></p>

   <h1>New book</h1>
   <%= form_with model: @book do |f| %>
    <label for = "Name" >Title</label><br>
    <%= f.text_field :title, id:"Name" %><br>
    <label for = "Opinion" >Opinion</label><br>
    <%= f.text_area :body, id:"Opinion" %><br>
    <%= f.submit"Create Book" %>
   <% end %>
  </div>
<div class="col-8">
  <h1>Books</h1>
  <table class="table">
   <tr class="border-bottom">
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
   </tr>
   <% @books.each do |book| %>
   <tr>
    <th>
     <%= link_to user_path(book.user_id) do %>
       <%= image_tag book.user.get_profile_image(50,50) %>
     <% end %>
    </th>
    <th>
     <%= link_to book_path(book) do %>
      <%= book.title %>
     <% end %>
    </th>
    <th><%= book.body %></th>
   <% end %>
   </tr>
  </table>
  </div>
 </div>
</div>
