<!DOCTYPE html>
<html>
  <head>
    <title>Bookers3</title>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="p-3 mb-2 bg-dark text-white">
    <header>
    <nav class="navbar navbar-expand-lg navbar-light">
    <div class="container">
      <li><%= link_to"Bookers",root_path, class:"text-white" %></li>

      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
      </button>
      <div class="navbar-collapse" id="navbarNavDropdown">
      <ul class="navbar-nav ml-auto">
      <% if user_signed_in? %>
        <li>
          <%= link_to user_path(current_user.id), class:"text-white mr-4" do %>
            <i class="fas fa-home"></i>Home
          <% end %>
        </li>
        <li>
          <%= link_to users_path, class:"text-white mr-4" do %>
            <i class="fas fa-users"></i>Users
          <% end %>
        </li>
        <li>
          <%= link_to books_path, class:"text-white mr-4" do %>
            <i class="fas fa-book-open"></i>Books
          <% end %>
        </li>
        <li>
          <%= link_to destroy_user_session_path, class:"text-white mr-4",method: :delete do %>
            <i class="fas fa-sign-out-alt"></i>Log out
          <% end %>
        </li>
      <% else %>
        <li>
          <%= link_to root_path, class: "text-white mr-4" do %>
            <i class="fas fa-home"></i>Home
          <% end %>
        </li>
        <li>
          <%= link_to about_path, class:"text-white mr-4" do %>
            <i class="fas fa-link"></i>About
          <% end %>
        </li>
        <li>
          <%= link_to new_user_registration_path, class:"text-white mr-4" do %>
            <i class="fas fa-user-plus"></i>Sign up
          <% end %>
        </li>
        <li>
          <%= link_to new_user_session_path, class:"text-white mr-4" do %>
            <i class="fas fa-sign-in-alt"></i>Log in
          <% end %>
        </li>
      </ul>
      </div>
      <% end %>
    </div>
    </nav>
    </header>
    </div>
    <div>
    <% flash.each do |key, value| %>
      <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
    </div>
    <%= yield %>
  </body>
</html>
