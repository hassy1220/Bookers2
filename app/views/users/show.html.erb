<!--ナビゲージョンの横に出てくる？なんで？-->
<div class="container">
 <div class="row">
  <div class="col-3 mr-5">
    <%= flash[:update] %>
    <h1>User info</h1>
    <p class="border-bottom"><%= image_tag @user.get_profile_image(100,100) %></p>
    <p class="border-bottom pb-3">name <%= @user.name %></p>
    <p>introduction <%= @user.introduction %></p>
    <% if @user == current_user %>
     <p><%= link_to"プロフィール編集",edit_user_path(@user.id) %></p>
    <% end %>

    <h1>New book</h1>
    <%= form_with model: @book, url: books_path,method: :post do |f| %>
     <label for = "Name" >Title</label><br>
     <%= f.text_field :title, id:"Name" %><br>
     <label for = "Opinion" >Opinion</label><br>
     <%= f.text_area :body, id:"Opinion" %><br>
     <%= f.submit"Create Book" %>
    <% end %>
  </div>

  <div class="col-8">
   <h1>Books</h1>
   <table class="table">
    <tr class="border-bottom">
     <th></th>
     <th>Title</th>
     <th>Body</th>
    </tr>
    <% @user.books.each do |book| %>
    <tr>
     <th><%= image_tag book.user.get_profile_image(50,50) %></th>
     <th>
       <%= link_to book_path(book.id) do %>
       <%= book.title %>
       <% end %>
     </th>
     <th><%= book.body %></th>
    </tr>
   <% end %>
   </table>
  </div>
 </div>
</div>
